<resources>
    <!-- Base application theme. -->
    <style name="Theme.SmartLab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/SmartLabEditText</item>
    </style>

    <style name="DefaultChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="chipMinHeight">48dp</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">@color/chip_background_state</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipStartPadding">15dp</item>
        <item name="chipEndPadding">15dp</item>
    </style>

    <style name="AppBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="SmartLabEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/default_edit_text_selector</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ColorPickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/ColorPickerButtonStyle</item>
    </style>

    <style name="ColorPickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
    </style>
</resources>